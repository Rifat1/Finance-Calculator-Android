<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextStartingValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Starting Value"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/editTextEndingValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ending Value"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/editTextNumberOfYears"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Number of Years"
        android:inputType="number"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/buttonCalculate"/>

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Annual Compound Growth Rate: "
        android:textSize="18sp"/>

</LinearLayout>